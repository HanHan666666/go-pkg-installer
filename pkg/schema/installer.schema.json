{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "go-pkg-installer installer.yaml schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "product",
    "flows"
  ],
  "properties": {
    "product": {
      "$ref": "#/$defs/product"
    },
    "meta": {
      "type": "object",
      "additionalProperties": {
        "type": [
          "string",
          "number",
          "boolean"
        ]
      }
    },
    "uninstallTargets": {
      "$ref": "#/$defs/uninstallTargets"
    },
    "flows": {
      "type": "object",
      "minProperties": 1,
      "patternProperties": {
        "^[A-Za-z][A-Za-z0-9_-]*$": {
          "$ref": "#/$defs/flow"
        }
      },
      "additionalProperties": false
    }
  },
  "$defs": {
    "product": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "logo": {
          "type": "string",
          "minLength": 1
        },
        "theme": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "primaryColor": {
              "type": "string",
              "pattern": "^#[0-9A-Fa-f]{6}$"
            }
          }
        }
      }
    },
    "uninstallTargets": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "systemPaths": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "userDataPaths": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "flow": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "entry",
        "steps"
      ],
      "properties": {
        "entry": {
          "type": "string",
          "minLength": 1
        },
        "steps": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/step"
          }
        }
      }
    },
    "step": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "title",
        "screen"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "screen": {
          "$ref": "#/$defs/screen"
        },
        "tasks": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/task"
          }
        },
        "guards": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/guard"
          }
        },
        "next": {
          "type": "string"
        },
        "prev": {
          "type": "string"
        },
        "branch": {
          "$ref": "#/$defs/branch"
        },
        "allowJump": {
          "type": "boolean"
        },
        "route": {
          "type": "string"
        }
      }
    },
    "branch": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "when": {
          "type": "string"
        },
        "then": {
          "type": "string"
        },
        "else": {
          "type": "string"
        }
      }
    },
    "screen": {
      "oneOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "type",
            "content"
          ],
          "properties": {
            "type": {
              "const": "richtext"
            },
            "content": {
              "type": "string",
              "minLength": 1
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "type",
            "content"
          ],
          "properties": {
            "type": {
              "const": "welcome"
            },
            "content": {
              "type": "string",
              "minLength": 1
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "type",
            "source"
          ],
          "properties": {
            "type": {
              "const": "license"
            },
            "source": {
              "type": "string",
              "minLength": 1
            },
            "requireScrollToEnd": {
              "type": "boolean"
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "type",
            "bind"
          ],
          "properties": {
            "type": {
              "const": "pathPicker"
            },
            "bind": {
              "type": "string",
              "minLength": 1
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "type",
            "bind"
          ],
          "properties": {
            "type": {
              "const": "options"
            },
            "bind": {
              "type": "string",
              "minLength": 1
            },
            "options": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                  "label",
                  "value"
                ],
                "properties": {
                  "label": {
                    "type": "string",
                    "minLength": 1
                  },
                  "value": {
                    "type": [
                      "string",
                      "number",
                      "boolean"
                    ]
                  }
                }
              }
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "type",
            "bind"
          ],
          "properties": {
            "type": {
              "const": "installType"
            },
            "bind": {
              "type": "string",
              "minLength": 1
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "type"
          ],
          "properties": {
            "type": {
              "const": "summary"
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "type"
          ],
          "properties": {
            "type": {
              "const": "progress"
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "type"
          ],
          "properties": {
            "type": {
              "const": "finish"
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": true,
          "required": [
            "type"
          ],
          "properties": {
            "type": {
              "pattern": "^go:[A-Za-z][A-Za-z0-9_-]*$"
            }
          }
        }
      ]
    },
    "guard": {
      "oneOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "type",
            "field"
          ],
          "properties": {
            "type": {
              "const": "mustAccept"
            },
            "field": {
              "type": "string",
              "minLength": 1
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "type",
            "minMB"
          ],
          "properties": {
            "type": {
              "const": "diskSpace"
            },
            "minMB": {
              "type": "integer",
              "minimum": 1
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": true,
          "required": [
            "type"
          ],
          "properties": {
            "type": {
              "pattern": "^go:[A-Za-z][A-Za-z0-9_-]*$"
            }
          }
        }
      ]
    },
    "task": {
      "oneOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "type",
            "url"
          ],
          "properties": {
            "type": {
              "const": "download"
            },
            "url": {
              "type": "string",
              "format": "uri"
            },
            "sha256": {
              "type": "string",
              "pattern": "^[A-Fa-f0-9]{64}$"
            },
            "to": {
              "type": "string"
            },
            "timeoutSec": {
              "type": "integer",
              "minimum": 1
            },
            "headers": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            },
            "retries": {
              "type": "integer",
              "minimum": 0
            },
            "requirePrivilege": {
              "type": "boolean"
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "type",
            "to"
          ],
          "properties": {
            "type": {
              "const": "unpack"
            },
            "from": {
              "type": "string"
            },
            "to": {
              "type": "string"
            },
            "format": {
              "type": "string",
              "enum": [
                "auto",
                "tar",
                "zip"
              ]
            },
            "requirePrivilege": {
              "type": "boolean"
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "type",
            "from",
            "to"
          ],
          "properties": {
            "type": {
              "const": "copy"
            },
            "from": {
              "type": "string"
            },
            "to": {
              "type": "string"
            },
            "recursive": {
              "type": "boolean"
            },
            "requirePrivilege": {
              "type": "boolean"
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "type",
            "target",
            "link"
          ],
          "properties": {
            "type": {
              "const": "symlink"
            },
            "target": {
              "type": "string"
            },
            "link": {
              "type": "string"
            },
            "requirePrivilege": {
              "type": "boolean"
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "type",
            "path"
          ],
          "properties": {
            "type": {
              "const": "writeConfig"
            },
            "path": {
              "type": "string"
            },
            "content": {
              "type": "string"
            },
            "template": {
              "type": "string"
            },
            "mode": {
              "type": "string"
            },
            "requirePrivilege": {
              "type": "boolean"
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "type",
            "name",
            "exec"
          ],
          "properties": {
            "type": {
              "const": "createDesktopEntry"
            },
            "name": {
              "type": "string"
            },
            "exec": {
              "type": "string"
            },
            "icon": {
              "type": "string"
            },
            "categories": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "requirePrivilege": {
              "type": "boolean"
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "type",
            "name",
            "action"
          ],
          "properties": {
            "type": {
              "const": "systemdService"
            },
            "name": {
              "type": "string"
            },
            "action": {
              "type": "string",
              "enum": [
                "enable_and_start",
                "stop_and_disable",
                "start",
                "stop",
                "restart",
                "enable",
                "disable"
              ]
            },
            "requirePrivilege": {
              "type": "boolean"
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "type",
            "name",
            "action"
          ],
          "properties": {
            "type": {
              "const": "dbusService"
            },
            "name": {
              "type": "string"
            },
            "action": {
              "type": "string",
              "enum": [
                "start",
                "stop",
                "restart"
              ]
            },
            "requirePrivilege": {
              "type": "boolean"
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "type",
            "path"
          ],
          "properties": {
            "type": {
              "const": "permission"
            },
            "path": {
              "type": "string"
            },
            "mode": {
              "type": "string"
            },
            "owner": {
              "type": "string"
            },
            "group": {
              "type": "string"
            },
            "recursive": {
              "type": "boolean"
            },
            "requirePrivilege": {
              "type": "boolean"
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "type",
            "tasks"
          ],
          "properties": {
            "type": {
              "const": "rollback"
            },
            "tasks": {
              "type": "array",
              "minItems": 1,
              "items": {
                "$ref": "#/$defs/task"
              }
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "type",
            "script"
          ],
          "properties": {
            "type": {
              "const": "shell"
            },
            "script": {
              "type": "string",
              "minLength": 1
            },
            "timeoutSec": {
              "type": "integer",
              "minimum": 1
            },
            "env": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            },
            "workDir": {
              "type": "string"
            },
            "requirePrivilege": {
              "type": "boolean"
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "type",
            "url"
          ],
          "properties": {
            "type": {
              "const": "net_script"
            },
            "url": {
              "type": "string",
              "format": "uri"
            },
            "sha256": {
              "type": "string",
              "pattern": "^[A-Fa-f0-9]{64}$"
            },
            "timeoutSec": {
              "type": "integer",
              "minimum": 1
            },
            "env": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            },
            "workDir": {
              "type": "string"
            },
            "requirePrivilege": {
              "type": "boolean"
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "type",
            "path"
          ],
          "properties": {
            "type": {
              "const": "removePath"
            },
            "path": {
              "type": "string"
            },
            "recursive": {
              "type": "boolean"
            },
            "requirePrivilege": {
              "type": "boolean"
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "type",
            "name"
          ],
          "properties": {
            "type": {
              "const": "removeDesktopEntry"
            },
            "name": {
              "type": "string"
            },
            "requirePrivilege": {
              "type": "boolean"
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": true,
          "required": [
            "type"
          ],
          "properties": {
            "type": {
              "pattern": "^go:[A-Za-z][A-Za-z0-9_-]*$"
            }
          }
        }
      ]
    }
  }
}
